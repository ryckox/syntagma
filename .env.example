# ===========================================
# SYNTAGMA DEPLOYMENT CONFIGURATION
# ===========================================

# Application Settings
NODE_ENV=production
PORT=3001

# Database Configuration
# For SQLite (Default - File-based)
DB_TYPE=sqlite
DB_PATH=./data/syntagma.db

# For PostgreSQL (Production recommended)
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=syntagma
# DB_USER=syntagma_user
# DB_PASSWORD=secure_password

# Authentication
JWT_SECRET=your-very-secure-jwt-secret-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-too

# File Upload Settings
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md

# Email Configuration (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# FROM_EMAIL=noreply@your-domain.com

# Security Settings
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/syntagma.log

# Initial Setup
SEED_DEMO_DATA=false
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups
